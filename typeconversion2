#include<iostream>
using namespace std; 


class triangle 
{
  int b ,h;
  float area;
  public: 
   triangle(int base, int height)
   {
    b= base;
    h= height ;
    area = 0.5 * b * h;
   }
   void showot()
   {
         cout <<" \n base " << b << " \nheight  " << h << "\n area of triangle  :" << area << endl;

   }
   int getlength()
   {return b;}
   int  getbreadth()
   {return h;}
   
};

class rectangle
{
  int l,b;
  float area;
  public : 
  rectangle (triangle t1 )
  {
    l = t1.getlength();
    b = t1.getbreadth();
    area = l*b;
    
  }
  void show()
  {
     cout <<" \n length " << l << " \n breadth " << b << "\n area of rectangle  :" << area << endl;

  }
};



int main() 

{
   triangle t(45,80);
   rectangle r= t ;
   t.showot();
   r.show();

   return 0;
}
